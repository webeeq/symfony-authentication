{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-header">List of F1 Drivers 2020</div>
                        {% if app.user != null %}
                            <table class="table">
                                <tr>
                                    <th>Driver</th>
                                    <th>Team</th>
                                </tr>
                                {% for key, item in drivers %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td>{{ item }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        {% endif %}
                    </div>
                </div>
                {% if app.user == null %}
                    <a href="{{ path('app_login') }}" class="btn btn-info list">Log in to see the list</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
